#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "portuguese");
    
    int num1, num2, num3;

    printf("Digite o primeiro número: ");
    scanf ("%d", &num1);
    
    printf("Digite o primeiro número: ");
    scanf ("%d", &num2);
    
    printf("Digite o primeiro número: ");
    scanf ("%d", &num3);

    system("cls || clear");

    printf("Primeiro número: %d \n", num1);
    printf("Segundo número: %d \n", num2);
    printf("Terceiro número: %d \n", num3);

    printf("\n");

    // Maior
    if (num1 > num2 && num1 > num3)
    {
        printf("O número maior é: %d \n", num1);
    } 
    else if (num2 > num1 && num2 > num3)
    {
        printf("O número maior é: %d \n", num2);
    }
    else if (num3 > num1 && num3 > num2)
    {
        printf("O número maior é: %d \n", num3);
    }

    // Menor
     if (num1 < num2 && num1 < num3)
    {
        printf("O número menor é: %d \n", num1);
    } 
    else if (num2 < num1 && num2 < num3)
    {
        printf("O número menor é: %d \n", num2);
    }
    else if (num3 < num1 && num3 < num2)
    {
        printf("O número menor é: %d \n", num3);
    }

    return 0;
} 
